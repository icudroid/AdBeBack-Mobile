<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="90dp"
	android:gravity="center_vertical">

	<TextView android:id="@+id/TextPositionFriend"
		android:layout_width="90dp" android:layout_height="90dp"
		android:background="@color/main_txt_color_white" android:textColor="@color/btn_color"
		android:text="1" android:gravity="center" android:textSize="42dp"
		android:textStyle="bold"></TextView>

	<RelativeLayout android:id="@+id/RelativeLayoutFriend"
		android:layout_toRightOf="@+id/TextPositionFriend"
		android:layout_height="90dp" android:layout_width="fill_parent"
		android:gravity="center_vertical" android:background="@color/bkScore">
		<TextView android:text="Pseudo" android:id="@+id/TextSpeudo"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="@color/btn_color" android:gravity="right"
			android:textStyle="bold" android:layout_marginLeft="5dp"></TextView>
	</RelativeLayout>

	<RelativeLayout android:id="@+id/RelativeLayoutFriend1"
		android:layout_width="90dp" android:layout_alignParentRight="true"
		android:layout_height="90dp" android:gravity="center">

		<TextView android:id="@+id/TextScoreFriend"
			android:layout_width="wrap_content" android:layout_height="90dp"
			android:text="0.000" android:layout_marginRight="5dp"
			android:textSize="22dp" android:textStyle="bold" android:textColor="@color/black"
			android:gravity="center_vertical"
			></TextView>

	</RelativeLayout>
</RelativeLayout>
